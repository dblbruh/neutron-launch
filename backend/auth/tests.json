{
  "tests": [
    {
      "name": "Register new user",
      "method": "POST",
      "body": {
        "action": "register",
        "username": "testuser",
        "email": "test@example.com",
        "password": "password123",
        "displayName": "Test User",
        "region": "Europe",
        "age": 25
      },
      "expectedStatus": 201,
      "expectedBody": {
        "message": "string",
        "user": {
          "id": "number",
          "username": "string",
          "email": "string",
          "displayName": "string",
          "points": "number",
          "level": "number"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Register with duplicate username",
      "method": "POST",
      "body": {
        "action": "register",
        "username": "testuser",
        "email": "test2@example.com",
        "password": "password123",
        "region": "Europe",
        "age": 25
      },
      "expectedStatus": 409,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with valid credentials",
      "method": "POST",
      "body": {
        "action": "login",
        "login": "testuser",
        "password": "password123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "message": "string",
        "user": {
          "id": "number",
          "username": "string",
          "points": "number"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with invalid credentials",
      "method": "POST",
      "body": {
        "action": "login",
        "login": "testuser",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}